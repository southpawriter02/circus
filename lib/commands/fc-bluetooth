#!/usr/bin/env bash

# ==============================================================================
#
# FILE:         fc-bluetooth
#
# DESCRIPTION:  This command manages the system's Bluetooth adapter.
#
# ==============================================================================

# --- Setup ------------------------------------------------------------------
set -e

# --- Help and Usage ---------------------------------------------------------
usage() {
  echo "Usage: fc bluetooth <action>"
  echo ""
  echo "Manages the system's Bluetooth adapter."
  echo ""
  echo "Actions:"
  echo "  on      - Turn Bluetooth on."
  echo "  off     - Turn Bluetooth off."
  echo "  status  - Show the current Bluetooth status."
  echo ""
  exit 1
}

# --- Main Logic -------------------------------------------------------------
main() {
  if [ -z "$1" ] || [ "$1" == "--help" ]; then
    usage
  fi

  # Dependency Check: Ensure blueutil is installed.
  if ! command -v "blueutil" >/dev/null 2>&1; then
    echo "Error: The 'blueutil' command is required but not found." >&2
    echo "Please run the main installer to install it via Homebrew." >&2
    exit 1
  fi

  ACTION="$1"

  case "$ACTION" in
    on)
      echo "Turning Bluetooth on..."
      blueutil --power 1
      echo "Bluetooth is now on."
      ;;
    off)
      echo "Turning Bluetooth off..."
      blueutil --power 0
      echo "Bluetooth is now off."
      ;;
    status)
      echo "Checking Bluetooth status..."
      local power_state
      power_state=$(blueutil --power)
      if [ "$power_state" -eq 1 ]; then
        echo "Bluetooth is currently on."
      else
        echo "Bluetooth is currently off."
      fi
      ;;
    *)
      echo "Error: Unknown action '$ACTION'" >&2
      usage
      ;;
  esac
}

main "$@"
