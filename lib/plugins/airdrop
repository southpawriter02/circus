#!/usr/bin/env bash

# ==============================================================================
#
# FILE:         airdrop
#
# DESCRIPTION:  This command manages AirDrop visibility.
#
# ==============================================================================

# --- Setup ------------------------------------------------------------------
set -e

# --- Help and Usage ---------------------------------------------------------
usage() {
  echo "Usage: fc airdrop <action>"
  echo ""
  echo "Manages AirDrop visibility."
  echo ""
  echo "Actions:"
  echo "  on        - Enable AirDrop for everyone."
  echo "  off       - Disable AirDrop."
  echo "  contacts  - Enable AirDrop for contacts only."
  echo "  status    - Show the current AirDrop status."
  echo ""
  exit 1
}

# --- Main Logic -------------------------------------------------------------
main() {
  if [ -z "$1" ] || [ "$1" == "--help" ]; then
    usage
  fi

  ACTION="$1"

  case "$ACTION" in
    on)
      echo "Enabling AirDrop for everyone..."
      defaults write com.apple.sharingd DiscoverableMode -string "Everyone"
      echo "AirDrop is now discoverable by everyone."
      ;;
    off)
      echo "Disabling AirDrop..."
      defaults write com.apple.sharingd DiscoverableMode -string "Off"
      echo "AirDrop is now off."
      ;;
    contacts)
      echo "Enabling AirDrop for contacts only..."
      defaults write com.apple.sharingd DiscoverableMode -string "Contacts Only"
      echo "AirDrop is now discoverable by contacts only."
      ;;
    status)
      echo "Checking AirDrop status..."
      local mode
      mode=$(defaults read com.apple.sharingd DiscoverableMode)
      echo "AirDrop is currently set to: $mode"
      ;;
    *)
      echo "Error: Unknown action '$ACTION'" >&2
      usage
      ;;
  esac
}

main "$@"
