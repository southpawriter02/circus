# DESCRIPTION:  This is the base Brewfile. It lists all the Homebrew packages
#               that should be installed for ALL roles.
#
# ==============================================================================

# --- Taps -------------------------------------------------------------------
# Add external repositories here if needed.
# tap "user/repo"

# --- Core Formulae ----------------------------------------------------------

# Core Unix utilities
brew "coreutils"

# Version control
brew "git"

# The Zsh shell
brew "zsh"

# The Bash shell
brew "bash"

# Testing framework and helpers
brew "bats-core"
brew "bats-support"
brew "bats-assert"

# Static analysis for shell scripts
brew "shellcheck"

# Dock management utility
brew "dockutil"

# --- Casks (GUI Applications) -----------------------------------------------

# GPG Suite for signing commits
cask "gpg-suite"

# A modern web browser
cask "google-chrome"
