# ==============================================================================
#
# FILE:         .gitconfig
#
# DESCRIPTION:  This is the main Git configuration file.
#               It includes a local file for user-specific settings.
#
# ==============================================================================

[user]
  # Your name and email should be in ~/.gitconfig.local
  # to avoid committing them to this repository.

[include]
  path = ~/.gitconfig.local

[core]
  editor = vim
  excludesfile = ~/.gitignore_global
  autocrlf = input

[push]
  default = simple

[pull]
  rebase = true

[alias]
  # Show a pretty, condensed log
  lg = log --graph --pretty=format:'%C(yellow)%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

  # Show the status in a short format
  s = status -s

  # List all aliases
  aliases = config --get-regexp ^alias\.

[credential]
  helper = osxkeychain
