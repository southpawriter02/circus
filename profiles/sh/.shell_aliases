#!/bin/sh

# ==============================================================================
#
# FILE:         .shell_aliases
#
# DESCRIPTION:  This file is dedicated to defining shell aliases that are
#               generic enough to work across all POSIX-compliant shells.
#
# ==============================================================================

# ------------------------------------------------------------------------------
# Navigation & Listing
# ------------------------------------------------------------------------------

# Enable colorized output for ls on macOS.
alias ls='ls -G'

# List all files colorized in long format, including hidden files.
alias l='ls -lah'

# List all files colorized in long format.
alias ll='ls -lh'

# Go up one directory.
alias ..='cd ..'

# Go up two directories.
alias ...='cd ../..'

# Go up three directories.
alias ....='cd ../../..'

# Go up four directories.
alias .....='cd ../../../..'


# ------------------------------------------------------------------------------
# Safety & Confirmation
# ------------------------------------------------------------------------------

# Prompt before overwriting a file.
alias cp='cp -i'

# Prompt before moving a file if it would overwrite another.
alias mv='mv -i'

# Prompt before every removal.
alias rm='rm -i'


# ------------------------------------------------------------------------------
# Utility & Information
# ------------------------------------------------------------------------------

# Colorize grep output.
alias grep='grep --color=auto'

# Show human-readable disk usage.
alias df='df -h'

# Show human-readable directory usage for the current directory (depth 1).
alias du='du -h -d 1'

# Show command history.
alias h='history'

# Reload the shell completely.
alias reload='exec $SHELL -l'


# ------------------------------------------------------------------------------
# Process Management
# ------------------------------------------------------------------------------

# Grep for a process from the process list.
alias psgrep='ps aux | grep -v grep | grep -i'
