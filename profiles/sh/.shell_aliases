#!/bin/sh

# ==============================================================================
#
# FILE:         .shell_aliases
#
# DESCRIPTION:  This file is dedicated to defining shell aliases that are
#               generic enough to work across all POSIX-compliant shells.
#
# ==============================================================================

# ------------------------------------------------------------------------------
# Navigation & Listing
# ------------------------------------------------------------------------------

alias ls='ls -G'         # Enable colorized output for ls on macOS.
alias l='ls -lah'        # List all files colorized in long format, including hidden.
alias ll='ls -lh'        # List all files colorized in long format.
alias ..='cd ..'         # Go up one directory.
alias ...='cd ../..'       # Go up two directories.
alias ....='cd ../../..'    # Go up three directories.

# ------------------------------------------------------------------------------
# Safety & Confirmation
# ------------------------------------------------------------------------------

alias cp='cp -i'         # Prompt before overwriting a file.
alias mv='mv -i'         # Prompt before moving a file if it would overwrite another.
alias rm='rm -i'         # Prompt before every removal.

# ------------------------------------------------------------------------------
# Git Aliases
# ------------------------------------------------------------------------------

alias g='git'
alias ga='git add'
alias gaa='git add --all'
alias gap='git add --patch'
alias gb='git branch'
alias gbr='git branch -r'
alias gc='git commit -v'
alias gcm='git commit -m'
alias gca='git commit -v -a'
alias gco='git checkout'
alias gcb='git checkout -b'
alias gd='git diff'
alias gds='git diff --staged'
alias gf='git fetch'
alias gl='git log --oneline --decorate --graph --all'
alias gld='git log --pretty=format:"%h - %an, %ar : %s"'
alias gp='git push'
alias gpf='git push --force-with-lease' # Safer force push
alias gpl='git pull'
alias gr='git remote -v'
alias gs='git status -s'
alias gst='git status'
alias gunstage='git reset HEAD --'

# ------------------------------------------------------------------------------
# Utility & Information
# ------------------------------------------------------------------------------

alias grep='grep --color=auto'
alias df='df -h'         # Show human-readable disk usage.
alias du='du -h -d 1'    # Show human-readable directory usage (depth 1).
alias h='history'        # Show command history.
alias reload='exec $SHELL -l' # Reload the shell completely.

# ------------------------------------------------------------------------------
# Network Utilities
# ------------------------------------------------------------------------------

alias ping='ping -c 5'   # Ping with a count of 5.
alias dig='dig +short'   # Quickly get DNS info.
alias ports='netstat -tulanp' # Show open ports (requires lsof on macOS)

# ------------------------------------------------------------------------------
# Process Management
# ------------------------------------------------------------------------------

alias psgrep='ps aux | grep -v grep | grep -i' # Grep for a process.

