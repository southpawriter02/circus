#!/bin/sh

# ==============================================================================
#
# FILE:         .shenv
#
# DESCRIPTION:  This file is dedicated to setting and exporting environment
#               variables for POSIX-compliant shells. It is sourced early
#               to ensure all other scripts have access to these variables.
#
# ==============================================================================

# --- Core Application Settings ----------------------------------------------

# Set the default editor for command-line tools (e.g., git).
# The -w flag is crucial: it tells the editor to wait for the file to be
# closed before returning control to the terminal.
export EDITOR='code -w'

# Set the default pager for viewing long text files.
export PAGER='less'

# --- Locale and Language Settings -------------------------------------------

# Set the language and locale to UTF-8 to ensure proper character handling.
export LANG='en_US.UTF-8'
export LC_ALL='en_US.UTF-8'

# --- Homebrew Settings ------------------------------------------------------

# Disable Homebrew's analytics to protect privacy.
export HOMEBREW_NO_ANALYTICS=1
